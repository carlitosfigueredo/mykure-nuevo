<div class="container p-5">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Todos las Pulseras</h1>
      <a href="/pulseras/agregar" class="btn btn-block btn-success mb-5"><i class="bi bi-plus-circle"></i> Agregar nuevo</a>
      <table class="table" id="datatable">
        <thead>
          <tr>
            <th scope="col">Codigo de la Pulsera</th>
            <th scope="col">Estado de la Pulsera</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
            {{#each pulsera}}
            <tr>    
                <td class="text-uppercase">{{codigoPulsera}}</td>
                <td class="text-uppercase">{{estadoPulsera}}</td>
                <td>
                    <div class="btn-gruop">
                        <a href="/pulseras/editar/{{idPulsera}}" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i> Editar</a>
                        <a data-bs-toggle="modal" data-bs-target="#modalEliminar"
									data-eliminar="/pulseras/eliminar/{{idPulsera}}"  class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Eliminar</a>
                    </div>
                </td>
            </tr>
            {{else}}
            <h2 class="text-center">No existen registros :(</h2>
            {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container p-5">
    <img class="d-block mx-auto" width="100px" src="/img/logo-mykure.png" alt="Logo Mykure">
    <h6 class="text-center">Mykure Control System</h6>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form action="/participacion/agregar/alumno/grupo/{{grupo.idGrupo}}" method="POST" class="shadow p-3 mb-5 bg-body rounded">
            <p class="text-center">Agregando participante para Grupo: {{grupo.nombreGrupo}}</p>
                <input type="hidden" name="idGrupo" value="{{grupo.idGrupo}}">
                <div class="row m-5">
                    <label for="idParticipante" class="form-label">Seleccione nombre del alumno</label>
                    <select name="idParticipante" id="idParticipante" required class="form-select" aria-label="Participante">
                        <option selected>Elegir</option>
                        {{#each participante}}
                        <option value="{{idParticipante}}">{{nombreCompletoParticipante}} - {{matriculaParticipante}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="row m-5">
                    <button class="btn btn-block btn-success">Agregar Participacion</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container p-5">
	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center">Todos los lugares</h1>
			<a href="/tipo-persona/agregar" class="btn btn-block btn-success mb-5"><i class="bi bi-plus-circle"></i>
				Agregar
				nuevo</a>
			<table class="table">
				<thead>
					<tr>
						<th scope="col">Descripcion</th>
						<th scope="col">Acciones</th>
					</tr>
				</thead>
				<tbody>
					{{#each tipoPersona}}
					<tr>
						<td class="text-uppercase">{{descripcionTipoPersona}}</td>
						<td>
							<div class="btn-gruop">
								<a href="/tipo-persona/editar/{{idTipoPersona}}" class="btn btn-sm btn-warning"><i
										class="bi bi-pencil"></i> Editar</a>
								<a data-bs-toggle="modal" data-bs-target="#modalEliminar"
									data-eliminar="/tipo-persona/eliminar/{{idTipoPersona}}"
									class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Eliminar</a>
							</div>
						</td>
					</tr>
					{{else}}
					<h2 class="text-center">No existen registros :(</h2>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>
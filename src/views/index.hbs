<div class="container p-5">
	<div class="welcome">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-9">
					<h1>Bienvenido al Sistema Mykure</h1>
					<p>Todos los eventos en tus manos</p>
				</div>
				<div class="col-md-3">
					<img width="150px" class="mx-auto d-block" src="/img/mykure.png" alt="" />
				</div>
			</div>
		</div>
	</div>
	<div class="report-center">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-3">
					<div class="shadow p-3 mb-5 bg-body rounded">
						<div class="reports-titles-purple">
							<p>Grupos</p>
						</div>
						<div class="reports-content">
							{{#if cuentaGrupos}}
							<h2 class="text-center mt-4">{{cuentaGrupos.cuentaGrupos}}</h2>
							{{else}}
							<h2 class="text-center mt-4">Todavia no hay grupos registrados</h2>
							{{/if}}
						</div>
					</div>
				</div>
				<div class="col-md-3">
					<div class="shadow p-3 mb-5 bg-body rounded">
						<div class="reports-titles-blue">
							<p>Participantes</p>
						</div>
						<div class="reports-content">
							{{#if cuentaParticipantes}}
							<h2 class="text-center mt-4">{{cuentaParticipantes.cuentaParticipante}}</h2>
							{{/if}}
						</div>
					</div>
				</div>
				<div class="col-md-3">
					<div class="shadow p-3 mb-5 bg-body rounded">
						<div class="reports-titles-green">
							<p>Pulseras entregadas</p>
						</div>
						<div class="reports-content">
							{{#if pulseras}}
							<h2 class="text-center mt-4">{{pulseras.entregadas}}</h2>
							{{/if}}
						</div>
					</div>
				</div>
				<div class="col-md-3">
					<div class="shadow p-3 mb-5 bg-body rounded">
						<div class="reports-titles-red">
							<p>Ganancias del dia</p>
						</div>
						<div class="reports-content line">
							{{#if ganancias}}
							<h2 class="text-center mt-4">{{ganancias.gananciaPulsera}}</h2>
							{{/if}}
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="shadow p-3 mb-5 bg-body rounded">
						<div class="reports-titles-purple">
							<p>Eventos Activos</p>
						</div>
						<div class="row">
							{{#each eventos}}
							<p>{{nombreEvento}}<a href="/asistencias/agregar/evento/{{idEvento}}"
									class="btn btn-sm btn-success">Registrar asistencia</a></p>
							{{/each}}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
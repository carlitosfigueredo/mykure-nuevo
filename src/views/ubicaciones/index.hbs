<div class="container p-5">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Todos las Ubicaciones</h1>
      <a href="/ubicaciones/agregar" class="btn btn-block btn-success mb-5"><i class="bi bi-plus-circle"></i> Agregar nuevo</a>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Nombre de la Ubicacion</th>
            <th scope="col">Descripcion de la Ubicacion</th>
            <th scope="col">Lugar Perteneciente</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
            {{#each ubicaciones}}
            <tr>    
                <td class="text-uppercase">{{nombreUbicacion}}</td>
                <td class="text-uppercase">{{descripcionUbicacion}}</td>
                <td class="text-uppercase">{{nombreLugar}}</td>
                <td>
                    <div class="btn-gruop">
                        <a href="/ubicaciones/editar/{{idUbicacion}}" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i> Editar</a>
                        <a data-bs-toggle="modal" data-bs-target="#modalEliminar" data-eliminar="/ubicaciones/eliminar/{{idUbicacion}}" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Eliminar</a>
                    </div>
                </td>
            </tr>
            {{else}}
            <h2 class="text-center">No existen registros :(</h2>
            {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

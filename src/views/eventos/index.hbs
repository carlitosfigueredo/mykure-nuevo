<div class="container p-5">
	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center">Todos los Eventos</h1>
			<a href="/eventos/agregar" class="btn btn-block btn-success mb-5">Agregar nuevo Evento</a>
            {{#if eventos}}
			<table class="table" id="datatable">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Nombre del Evento</th>
						<th scope="col">Fecha del Evento</th>
                        <th scope="col">Ubicacion del Evento</th>
						<th scope="col">Acciones</th>
					</tr>
				</thead>
				<tbody>
					{{#each eventos}}
					<tr>
						<th scope="row">{{idEvento}}</th>
						<td class="text-uppercase">{{nombreEvento}}</td>
                        <td class="text-uppercase">{{fechaEvento}}</td>
						<td class="text-uppercase">{{nombreLugar}} - {{nombreUbicacion}}</td>
						<td>
							<div class="btn-gruop">
								<a href="/eventos/ver/{{idevento}}" class="btn btn-sm btn-info">Ver Eventos Secundarios</a>
								<a href="/eventos/editar/{{idevento}}" class="btn btn-sm btn-warning">Editar evento</a>
								<a href="/eventos/eliminar/{{idevento}}" class="btn btn-sm btn-danger">Eliminar evento</a>
							</div>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
            {{else}}
				<h2 class="text-center">No existen registros :(</h2>
            {{/if}}
		</div>
	</div>
</div>
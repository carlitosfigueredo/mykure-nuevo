<div class="report-center">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-3">
					<div class="shadow p-3 mb-5 bg-body rounded">
						<div class="reports-titles-purple">
							<p>Grupos</p>
						</div>
						<div class="reports-content">
							{{#if cuentaGrupos}}
							<h2 class="text-center mt-4">{{cuentaGrupos.cuentaGrupos}}</h2>
							{{else}}
							<h2 class="text-center mt-4">Todavia no hay grupos registrados</h2>
							{{/if}}
						</div>
					</div>
				</div>
				<div class="col-md-3">
					<div class="shadow p-3 mb-5 bg-body rounded">
						<div class="reports-titles-blue">
							<p>Participantes</p>
						</div>
						<div class="reports-content">
							{{#if cuentaParticipantes}}
							<h2 class="text-center mt-4">{{cuentaParticipantes.cuentaParticipante}}</h2>
							{{/if}}
						</div>
					</div>
				</div>
				<div class="col-md-3">
					<div class="shadow p-3 mb-5 bg-body rounded">
						<div class="reports-titles-green">
							<p>Pulseras entregadas</p>
						</div>
						<div class="reports-content">
							{{#if pulseras}}
							<h2 class="text-center mt-4">{{pulseras.entregadas}}</h2>
							{{/if}}
						</div>
					</div>
				</div>
				<div class="col-md-3">
					<div class="shadow p-3 mb-5 bg-body rounded">
						<div class="reports-titles-red">
							<p>Ganancias del dia</p>
						</div>
						<div class="reports-content line">
							{{#if ganancias}}
							<h2 class="text-center mt-4">{{ganancias.gananciaPulsera}}</h2>
							{{/if}}
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="shadow p-3 mb-5 bg-body rounded">
						<div class="reports-titles-blue">
							<p>Ver los eventos secudarios</p>
						</div>
						<div class="row lista-eventos justify-content-center">
							{{#each eventosSecundarios}}
							<p>{{nombreEventoSecundario}}<a href="/asistencias/agregar/evento/{{idEventoSecudario}}"
									class="btn btn-sm btn-success">Ver Grupos Participantes</a></p>
							{{/each}}
							<a class="btn btn-info" href="/eventos-secundarios/todos">Ver Todos los eventos secundarios</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
<div class="container p-5">
	<div class="row">
		<div class="col-md-12">
			<h1 class="text-center">Todos los Grupos</h1>
			<a href="/grupos/agregar" class="btn btn-block btn-success mb-5">Agregar nuevo grupo</a>
			{{#if grupo}}
			<table class="table" id="datatable">
				<thead>
					<tr>
						<th scope="col">Nombre del Grupo</th>
						<th scope="col">Tutor del Grupo</th>
						<th scope="col">Acciones</th>
					</tr>
				</thead>
				<tbody>
					{{#each grupo}}
					<tr>
						<td class="text-uppercase">{{nombreGrupo}}</td>
						{{#if nombreCompletoTutor}}
						<td class="text-uppercase">{{nombreCompletoTutor}}</td>
						{{else}}
						<td class="text-uppercase">grupo sin tutor</td>
						{{/if}}
						<td>
							<div class="btn-gruop">
								<a href="/grupos/ver/{{idGrupo}}" class="btn btn-sm btn-info">Ver Integrantes</a>
								{{#if nombreCompletoTutor}}
								{{else}}
									<a href="/grupos/asignar/{{idGrupo}}" class="btn btn-sm btn-primary">Asignar Tutor</a>
								{{/if}}
								<a href="/grupos/editar/{{idGrupo}}" class="btn btn-sm btn-warning">Editar Grupo</a>
								<a href="/grupos/eliminar/{{idGrupo}}" class="btn btn-sm btn-danger">Eliminar Grupo</a>

							</div>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
			{{else}}
				<h2 class="text-center">No existen registros :(</h2>
			{{/if}}
		</div>
	</div>
</div>
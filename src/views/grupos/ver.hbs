<div class="container p-5">
  <img
    class="d-block mx-auto"    width="100px"    src="/img/logo-mykure.png"    alt="Logo Mykure"  />
  <h6 class="text-center">Mykure Control System</h6>
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        {{!-- <div class="btn-group">
            <a href="/grupos/agregar" class="btn btn-block btn-success mb-5">Agregar nuevo Grupo</a>
            <a href="/tutores/agregar" class="btn btn-block btn-success mb-5">Agregar nuevo Tutor</a>
            <a href="/participantes/agregar" class="btn btn-block btn-success mb-5">Agregar nuevo Participante</a>
        </div> --}}
      </div>
      <div class="row">
        <h3>Detalles del Grupo</h3>
        <h5>Nombre del Grupo: {{grupo.nombreGrupo}}</h5>
        {{#each tutor}}
        <h6>Tutor: {{nombreCompletoTutor}}</h6>
        {{/each}}
      </div>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Nombre del Alumno</th>
            <th scope="col">Matricula</th>
            <th scope="col">Carrera</th>
          </tr>
        </thead>
        <tbody>
            {{#each integrantes}}
            <tr>  
                <td class="text-uppercase">{{nombreCompletoParticipante}}</td>
                <td class="text-uppercase">{{matriculaParticipante}}</td>
                <td class="text-uppercase">{{carreraParticipante}}</td>
            </tr>
            {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
